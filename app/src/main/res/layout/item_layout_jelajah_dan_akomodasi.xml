<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_marginRight="8dp"
    android:elevation="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_height="225dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@color/teal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/iv_foto_lokasi"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
        <RelativeLayout
            android:padding="16dp"
            android:layout_below="@id/iv_foto_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_nama_tempat"
                android:text="Rumah Kreatif"
                android:layout_width="125dp"
                android:layout_height="wrap_content" />
            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/tv_lokasi"
                android:layout_below="@id/tv_nama_tempat"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:text="Jl Jalan ke banyuwangi, Km 33, Banyuwangi"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/layout_rating"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/ic_star_24dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:src="@drawable/ic_star_24dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:src="@drawable/ic_star_24dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:src="@drawable/ic_star_24dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:src="@drawable/ic_star_border_24dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.design.card.MaterialCardView>