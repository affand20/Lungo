<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jadwal.JadwalLiburanActivity">
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/kelola_1"
        android:background="@drawable/bg_kelola_jadwal"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/close_btn"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_24dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Ayo\nSusun\nJadwalmu"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_below="@id/close_btn"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.button.MaterialButton
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Mulai"
            android:id="@+id/start_atur_jadwal"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:translationX="500dp"
        android:id="@+id/kelola_2"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chevron_left_24dp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_tahap_1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:text="Tahap 1"
            android:layout_below="@id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_durasi"
            android:layout_below="@id/tv_tahap_1"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:text="Durasi\nLiburan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_berangkat"
            android:layout_below="@id/tv_durasi"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:hint="Berangkat"
            android:textColorHint="@android:color/white"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tie_berangkat"
                android:textColor="@android:color/white"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_wkt_berangkat"
            android:layout_below="@id/til_berangkat"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:hint="Waktu Berangkat"
            android:textColorHint="@android:color/white"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tie_wkt_berangkat"
                android:textColor="@android:color/white"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.button.MaterialButton
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Selanjutnya"
            android:id="@+id/btn_next_1"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:translationX="500dp"
        android:id="@+id/kelola_3"
        android:background="@color/teal"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:id="@+id/back_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/back_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chevron_left_24dp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/back_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_tahap_2"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:text="Tahap 2"
            android:layout_below="@id/back_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_durasi_2"
            android:layout_below="@id/tv_tahap_2"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:text="Kota\nAsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Kota"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_below="@id/tv_durasi_2"
            android:layout_marginTop="64dp"
            android:id="@+id/tv_kota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinner_asal_kota"
            android:layout_below="@id/tv_kota"
            android:layout_marginTop="16dp"
            android:entries="@array/kota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.design.button.MaterialButton
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Selanjutnya"
            android:id="@+id/btn_next_2"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:translationX="500dp"
        android:id="@+id/kelola_4"
        android:background="@color/pink"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:id="@+id/back_layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/back_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chevron_left_24dp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/back_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_tahap_3"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:text="Tahap 3"
            android:layout_below="@id/back_layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_durasi_3"
            android:layout_below="@id/tv_tahap_3"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:text="Transport\nke Banyuwangi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_below="@id/tv_durasi_3"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                android:id="@+id/bis"
                app:contentPadding="16dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Bis"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="6 Jam 30 Menit"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                android:id="@+id/mobil"
                app:contentPadding="16dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Mobil"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="6 Jam"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:background="@android:color/white"
                android:id="@+id/motor"
                app:contentPadding="16dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Motor"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="8 Jam"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>